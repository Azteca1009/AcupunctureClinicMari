/*FAQリスト***************/
.error-404-contents {
  -webkit-transition: 0.6s;
  -o-transition: 0.6s;
  transition: 0.6s;
}

/* 画面サイズ変更対応 ****************************************/
/***********************************************************/
/* width1299px以上の画面                                    */
/***********************************************************/
@media screen and (min-width: 1299px) {
  /*お探しのページが見つかりません***************/
  .error-404 {
    margin: 80px 0;
  }
  .error-404-contents {
    margin-top: 50px;
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
  }
  .error-404-sec {
    width: 47%;
  }
  .error-404-sec-title {
    font-size: 1.2rem;
    font-weight: bold;
    border-bottom: 1px solid #dcdcdc;
  }
  .error-404-sec-list-ul {
    padding-left: 30px;
  }
  .error-404-sec-list-li {
    margin-top: 40px;
    font-weight: 500;
  }
}

