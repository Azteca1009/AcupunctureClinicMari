/*ご来院にあたって***************/
.beginner-self-introduction {
  -webkit-transition: 0.6s;
  -o-transition: 0.6s;
  transition: 0.6s;
}
.beginner-self-introduction-h .ja {
  font-weight: bold;
  display: block;
  letter-spacing: 0.15em;
}

/* 画面サイズ変更対応 ****************************************/
/***********************************************************/
/* width1299px以上の画面                                    */
/***********************************************************/
@media screen and (min-width: 1299px) {
  /*ご来院にあたって***************/
  .beginner-self-introduction {
    padding: 50px 0;
    text-align: center;
  }
  .beginner-self-introduction-h .ja {
    font-size: 1.5rem;
  }
  .beginner-self-introduction-content {
    padding: 40px 0 80px;
    font-weight: 500;
  }
}

