  /*特別休日指定フォーム***************/
  .regular_holiday_setting-h {
    margin-top: 100px;
    margin-bottom: 50px;
  }

  .regular_holiday_setting-h .ja {
    font-size: 1.5rem;
    text-align: center;
  }
