/*特別休日指定フォーム***************/
.mod-mainContent {
  -webkit-transition: 0.6s;
  -o-transition: 0.6s;
  transition: 0.6s;
}
.regular_holiday_setting-h .ja {
  font-weight: bold;
  display: block;
  letter-spacing: 0.15em;
}
.mod-form {
  background: #ecf7fb;
  margin-bottom: 30px;
  -webkit-transition: 0.6s;
  -o-transition: 0.6s;
  transition: 0.6s;
}
.mod-form .must {
  color: #1ba1e6;
}
.mod-form-table {
  display: block;
  margin-bottom: 30px;
}
.mod-form-table tr {
  margin-bottom: 2em;
}
.mod-form-table th {
  font-weight: bold;
  text-align: left;
  margin-bottom: 0.5em;
}
.mod-form-table tbody, .mod-form-table tr, .mod-form-table th, .mod-form-table td {
  display: block;
}
input:focus {
  background: #eaf4fc;
}
textarea:focus {
  background: #eaf4fc;
}
.close {
  background-color: #E1E5E7;
}

.open:hover, .close:hover{
  cursor:pointer;
  background-color: #fff0f5;
}

/* 画面サイズ変更対応 ****************************************/
