  /*お問い合わせありがとうございます***************/
  .contact-h .ja {
    font-size: 1.5rem;
    text-align: center;
  }
  .mod-thanks {
    padding: 50px;
    font-size: 1.5rem;
  }
}

/***********************************************************/
/* width800px以下の画面                                     */
/***********************************************************/
@media screen and (max-width: 800px) {
  /*お問い合わせありがとうございます***************/
  .contact-h .ja {
    font-size: 1.2rem;
    text-align: center;
    padding-top: 5rem;
  }
  .mod-thanks {
    padding: 20px;
    font-size: 1.2rem;
  }
