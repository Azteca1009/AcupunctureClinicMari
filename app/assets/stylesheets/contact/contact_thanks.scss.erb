/*お問い合わせありがとうございます***************/
.contact-h .ja {
  font-weight: bold;
  display: block;
  letter-spacing: 0.15em;
}
.mod-thanks {
  margin-bottom: 30px;
  width: 100%;
  text-align: center;
  font-weight: 500;
  -webkit-transition: 0.6s;
  -o-transition: 0.6s;
  transition: 0.6s;
}

/* 画面サイズ変更対応 ****************************************/
/***********************************************************/
/* width1299px以上の画面                                    */
/***********************************************************/
@media screen and (min-width: 1299px) {
  /*お問い合わせありがとうございます***************/
  .contact-h .ja {
    font-size: 1.5rem;
    text-align: center;
  }
  .mod-thanks {
    padding: 50px;
    font-size: 1.5rem;
  }
}

/***********************************************************/
/* width1025px以上1299px以下の画面（プリント設定）            */
/***********************************************************/
@media screen and (max-width: 1299px) and (min-width: 1025px), print {
  /*お問い合わせありがとうございます***************/
  .contact-h .ja {
    font-size: 1.5rem;
    text-align: center;
  }
  .mod-thanks {
    padding: 50px;
    font-size: 1.5rem;
  }
}

/***********************************************************/
/* width800px以上1024px以下の画面                           */
/***********************************************************/
