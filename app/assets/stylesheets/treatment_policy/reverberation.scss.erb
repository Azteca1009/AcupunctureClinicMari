/*痛い鍼はヘタなのか***************/
.treatment_policy-reverberation {
  -webkit-transition: 0.6s;
  -o-transition: 0.6s;
  transition: 0.6s;
}
.treatment_policy-reverberation-h .ja {
  font-weight: bold;
  display: block;
  letter-spacing: 0.15em;
}
.u-c-c1 {
  font-weight: bold;
}

